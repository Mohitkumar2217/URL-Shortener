<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("partials/head") %>
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/css/history.css">
</head>

<body>
  <%- include("partials/navbar", { user: user }) %>

  <div class="container mt-4">
    <h2 class="text-light fw-bold text-center mb-4">Your URL History</h2>

    <div class="table-responsive bg-dark p-3 rounded shadow">
      <table class="table table-dark table-striped table-hover">
        <thead>
          <tr>
            <th>Short URL</th>
            <th>Original URL</th>
            <th>Clicks</th>
            <th>Date</th>
          </tr>
        </thead>
        
        <tbody>
          <% history.forEach(h => { %>
            <tr>
              <td><a href="/<%= h.shortId %>" target="_blank"><%= h.shortId %></a></td>
              <td><%= h.redirectURL %></td>
              <td><%= h.totalClicks %></td>
              <td><%= h.createdAt.toDateString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

</body>

</html>
