    <div class="container">
      <h1>SignUp</h1>
    </div>
    <div class="signForm">
      <form action="/user" method="post">
        <div class="namecontainer">
          <label for="">Name:</label>
          <input type="text" required name="name" id="fullName" />
        </div>
        <div class="emailcontainer">
          <label for="">Email:</label>
          <input type="text" required name="email" id="fullEmail" />
        </div>
        <div class="passwordcontainer">
          <label for="">Password:</label>
          <input type="password" required name="password" id="fullPassword" />
        </div>
        <div class="confirmpasscontainer">
          <label for="">Confirm Password:</label>
          <input
            type="password"
            required
            name="confirmpass"
            id="fullcPassword"
          />
        </div>
        <div class="signupbutton">
          <button type="submit">SignUp</button>
        </div>
      </form>
      <div class="loginalready">
        <a href="https://url-shortener-1-9443.onrender.com/login"
          >register yourself.</a
        >
      </div>
    </div>
