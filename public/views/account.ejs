<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="../css/home.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />
  </head>

  <body class="bg-light">
    <!-- navigation bar -->
    <nav class="navbar navbar-expand-lg shadow-sm">
      <div class="container-fluid">
        <a class="navbar-brand fw-bold" href="/">Home</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/history"
                >History</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Link</a>
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Option1
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a class="dropdown-item" href="/create-file">Create file</a>
                </li>
                <li>
                  <a class="dropdown-item" href="/save-urls">Save Short URLs</a>
                </li>
                <li><hr class="dropdown-divider" /></li>
                <li><a class="dropdown-item" href="/see-more">See more</a></li>
              </ul>
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Option2
              </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/setting">Setting</a></li>
                <li><a class="dropdown-item" href="/account">Account</a></li>
                <li><hr class="dropdown-divider" /></li>
                <li><a class="dropdown-item" href="/notes">Notes</a></li>
              </ul>
            </li>
            <li class="nav-item">
              <a class="nav-link disabled" aria-disabled="true">Admin</a>
            </li>
          </ul>

          <form class="d-flex me-2" role="search">
            <input
              class="form-control me-2"
              type="search"
              placeholder="Search"
              aria-label="Search"
            />
            <button class="btn btn-outline-light" type="submit">Search</button>
          </form>

          <form action="/logout" method="GET">
            <button type="submit" class="btn logout-navbar btn-danger">
              Logout
            </button>
          </form>
        </div>
      </div>
    </nav>

    <!-- breadcrumb -->
    <nav aria-label="breadcrumb" class="mt-3">
      <ol class="breadcrumb bg-white px-3 py-2 rounded shadow-sm">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Account</li>
      </ol>
    </nav>

    <div class="container mt-4">
      <h2 class="text-primary mb-4 text-center">My Profile</h2>

      <div class="row">
        <!-- Profile Info -->
        <div class="col-md-8">
          <div class="card shadow-sm p-4 mb-4">
            <h5 class="mb-3">Personal Information</h5>
            <form action="/account" method="POST">
              <% for (let key in user) { %>
              <div class="mb-3">
                <label class="form-label text-capitalize"><%= key %></label>
                <input
                  type="text"
                  class="form-control"
                  name="<%= key %>"
                  value="<%= user[key] %>"
                  placeholder="Enter <%= key %>"
                />
              </div>
              <% } %>
              <button type="submit" class="btn btn-primary w-100">
                Update Profile
              </button>
            </form>
          </div>
        </div>

        <!-- Sidebar: Links, Help, Settings -->
        <div class="col-md-4">
          <div class="card shadow-sm mb-4 p-3">
            <h5>Quick Links</h5>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><a href="/url">Shorten URL</a></li>
              <li class="list-group-item"><a href="/history">History</a></li>
              <li class="list-group-item">
                <a href="/account/settings">Settings</a>
              </li>
              <li class="list-group-item"><a href="/help">Help</a></li>
            </ul>
          </div>

          <div class="card shadow-sm p-3">
            <h5>Help & Support</h5>
            <p>
              Need assistance? Contact
              <a href="mailto:support@example.com">support@example.com</a> or
              check our <a href="/faq">FAQ</a>.
            </p>
          </div>
        </div>
      </div>
    </div>

    <script src="../js/login.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
